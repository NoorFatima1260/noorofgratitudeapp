<resources>
    <!-- Custom Popup Menu Style -->
    <style name="CustomPopupMenu" parent="ThemeOverlay.AppCompat.Light"> <!-- Background Color -->
        <item name="android:popupBackground">#0B120B</item><!-- Text Appearance -->

    </style>

    <!-- Popup Menu Text Style -->
    <style name="PopupMenuText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item> <!-- Black Text Color -->
    </style>

    <!--bottomtheme -->
    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextInactive</item>
    </style>


    <style name="BottomNavTextActive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#E6F2E6</item> <!-- Green -->
    </style>

    <style name="BottomNavTextInactive">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#051B06</item> <!-- Gray -->
    </style>
    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="BottomNavTextStyle">
        <item name="android:textSize">8sp</item> <!-- Adjust text size -->
        <item name="android:textColor">#FFFFFF</item>
    </style>
<!--finished-->

    <style name="ReminderItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ReminderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>






    <style name="ReactionEmoji">
        <item name="android:textSize">26sp</item>
        <item name="android:padding">8dp</item>
    </style>



</resources>