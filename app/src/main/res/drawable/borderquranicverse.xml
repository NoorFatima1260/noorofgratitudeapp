<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <solid android:color="#FFFFFF" /> <!-- White background inside the box -->
        <corners android:radius="12dp" /> <!-- Rounded corners -->
        <stroke android:color="#FFD700" android:width="4dp" /> <!-- Golden border -->
        <padding
            android:left="16dp"
            android:top="16dp"
            android:right="16dp"
            android:bottom="16dp" /> <!-- Padding inside the box -->
    </shape>
</selector>