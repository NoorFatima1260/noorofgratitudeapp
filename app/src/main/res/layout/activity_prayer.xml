<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_beige"
    tools:context=".PrayerActivity">
    <!-- Toolbar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green_dark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/back_comment"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Back"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:layout_gravity="start|center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prayer Times"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/background_light"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <!-- Next Prayer Countdown Timer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/button_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/txtNextPrayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:textColor="#4E0606"
            android:paddingStart="8dp"/>
    </LinearLayout>
    <!-- Prayer Times List with Alarm Icon -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPrayerTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
       android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/green_dark" />
</LinearLayout>
