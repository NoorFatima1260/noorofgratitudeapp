<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_gratitude_journal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="#509546">
            <!-- First Back Button -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:backgroundTint="#F4F2F2"
                android:contentDescription="Back"
                android:src="@drawable/back_comment"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:scaleType="centerInside"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp" />
            <!-- Title Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to the Mood Journal"
                android:textSize="18sp"
                android:layout_marginTop="5sp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:src="@drawable/gratitute_muslim"
            android:scaleType="fitXY" />
        <!-- Daily Gratitude Challenge Button -->
        <Button
            android:id="@+id/btn_go_to_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Gratitude Challenge"
             android:layout_marginLeft="30dp"
            android:backgroundTint="#509546"
            android:layout_marginRight="30dp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="1dp" />
        <!-- User-Generated Content Button -->
        <Button
            android:id="@+id/btn_go_to_progress_tracker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gratitude Progress Tracker"
             android:textColor="#FFFFFF"
            android:backgroundTint="#509546"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="1dp" />
    </LinearLayout>
</ScrollView>


