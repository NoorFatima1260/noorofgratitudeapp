<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_beige"
    tools:context=".GratitudeDetailsActivity"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_green"
            android:padding="12dp"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back_comment"
                android:scaleType="centerInside"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:layout_alignParentStart="true"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/tv_gratitude_challenge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Daily Gratitude Challenge"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:ellipsize="end"
                android:singleLine="true" />
        </RelativeLayout>

        <!-- Gratitude Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:background="@color/white">

            <include layout="@layout/layout_gratitude_input" />
        </androidx.cardview.widget.CardView>

        <!-- Save & Share Buttons Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:background="@color/white"
            android:layout_marginBottom="16dp">

            <include layout="@layout/layout_save_share_buttons" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
