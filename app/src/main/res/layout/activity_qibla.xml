<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_beige"
    tools:context=".QiblaActivity">
    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:padding="8dp">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_comment"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Back"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qibla Direction"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <!-- Compass Image -->
    <ImageView
        android:id="@+id/compassImage"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/compuse_activity"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"/>
    <!-- Qibla Indicator Centered Over Compass -->
    <ImageView
        android:id="@+id/qiblaIndicator"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/qibla_direction"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"/>
    <!-- Current Direction Text -->
    <TextView
        android:id="@+id/directionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finding Qibla..."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/qiblaIndicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <!-- GPS Status Indicator -->
    <TextView
        android:id="@+id/gpsStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS: Waiting..."
        android:textColor="@color/black_variant"
        android:textSize="16sp"
        android:layout_below="@id/directionText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>