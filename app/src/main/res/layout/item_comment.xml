<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#ffff">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_margin="8dp"
        android:backgroundTint="@color/light_beige">
        <!-- Main content inside card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">
            <!-- Username + 3 dots -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="profile image"
                    android:src="@drawable/default_profile_image"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/profile_circle_background" />
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ivProfileImage"
                    android:layout_centerVertical="true"
                    android:text="Username"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnMore"
                    android:layout_width="27dp"
                    android:layout_height="19dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="More Options"
                    android:src="@drawable/three_dots_horizontal" />
            </RelativeLayout>
            <!-- Comment Text -->
            <TextView
                android:id="@+id/tvCommentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a comment."
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="8dp" />
            <!-- Timestamp -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h ago"
                android:textSize="10sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp" />
            <!-- Actions: Like, Dislike, Reply -->
            <LinearLayout
                android:id="@+id/actionButtons"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/btnCommentLike"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_like"
                    android:contentDescription="Like"
                    android:padding="4dp"
                    />
                <TextView
                    android:id="@+id/repllike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="like"
                    android:textSize="10dp"
                    android:textColor="#FB000000"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/btnCommentDislike"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/dislike"
                    android:contentDescription="Dislike"
                    android:padding="4dp"
                    android:layout_marginStart="16dp" />
                <TextView
                    android:id="@+id/repldislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dislike"
                    android:textSize="10dp"
                    android:textColor="#FB000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/btnnestedReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Reply"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvToggleReplies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="4dp"
                android:gravity="left"
                android:text="View Replies"
                android:textColor="#1A73E8"
                android:textSize="12sp"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReplies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="32dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
