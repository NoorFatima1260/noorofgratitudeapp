<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_beige"
    tools:context=".NotificationsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/dark_green"
        android:background="@drawable/button_bg"
        android:padding="8dp">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_comment"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Back"
            android:scaleType="fitCenter"/>
        <!-- Header Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Reminders"
            android:textSize="22sp"
            android:textColor="@color/background_light"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="10dp" />
        <!-- Reminder Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="12dp">
            <!-- Gratitude Reminder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gratitude Reminder"
                    android:textSize="15sp"
                    android:textColor="#0A430F"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_gratitude_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00 AM"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingEnd="8dp" />
                <ImageView
                    android:id="@+id/iv_gratitude_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit Time" />
                <Switch
                    android:id="@+id/switch_gratitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!-- Mood Tracker Reminder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mood Tracker Reminder"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#0A430F" />
                <TextView
                    android:id="@+id/tv_mood_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:00 PM"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingEnd="8dp" />
                <ImageView
                    android:id="@+id/iv_mood_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit Time" />
                <Switch
                    android:id="@+id/switch_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!-- Recitation Duration Reminder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recitation Duration Reminder"
                    android:textSize="15sp"
                    android:textColor="#0A430F"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_recitation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:00 AM"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingEnd="8dp" />
                <ImageView
                    android:id="@+id/iv_recitation_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit Time" />
                <Switch
                    android:id="@+id/switch_recitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!-- Schedule Reminder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Schedule Reminder"
                    android:textSize="15sp"
                    android:textColor="#0A430F"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_schedule_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingEnd="8dp" />
                <ImageView
                    android:id="@+id/iv_schedule_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit Time" />
                <Switch
                    android:id="@+id/switch_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!-- Daily Dua Reminder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Daily Dua Reminder"
                    android:textSize="15sp"
                    android:textColor="#0A430F"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_dua_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6:30 PM"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingEnd="8dp" />
                <ImageView
                    android:id="@+id/iv_dua_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit Time" />
                <Switch
                    android:id="@+id/switch_dua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!-- Islamic Event Reminder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Islamic Event Reminder"
                    android:textSize="15sp"
                    android:textColor="#0A430F"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notify Before Event"
                        android:textSize="15sp"
                        android:textColor="#0A430F"
                        android:textStyle="bold"/>
                    <Spinner
                        android:id="@+id/spinner_calendar_notify"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:entries="@array/notification_options"
                        android:background="@android:drawable/btn_dropdown"
                        android:padding="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enable Notification"
                        android:textSize="15sp"
                        android:textColor="#0A430F"
                        android:textStyle="bold"/>
                    <Switch
                        android:id="@+id/switch_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
